extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box
        h1 #{project.project_name}
        p #{project.description}
      .project-tech-links-box.box
        h6 Technologies
        ul
          each tech in project.technologies
            li #{tech}
        a.btn-link(href=`${project.live_link}`, target = '_blank') Live Demo
        a.btn-link(href=`${project.github_link}`, target = '_blank') GitHub Repo
    .project-img-box.box
      if(project.project_name === 'API Based Employee Staff Directory')
        img.project-img(src=`${project.image_urls[1]}`, alt=`${project.project_name} Screenshot`)
        img.project-img(src=`${project.image_urls[2]}`, alt=`${project.project_name} Screenshot`)
      else if (project.project_name === 'Game Show/Hangman App')
        img.project-img(src=`${project.image_urls[1]}`, alt=`${project.project_name} Screenshot`)
        img.project-img(src=`${project.image_urls[2]}`, alt=`${project.project_name} Screenshot`)
        img.project-img(src=`${project.image_urls[3]}`, alt=`${project.project_name} Screenshot`)
      else 
        img.project-img(src=`${project.image_urls[1]}`, alt=`${project.project_name} Screenshot`)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
